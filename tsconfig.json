{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"pretty": true,
		"target": "es6",
		"rootDirs": ["src/"],
		"outDir": "dist"
	},
	"include": ["./**/*"],
	"exclude": [
		"node_modules/**/*",
		"test"
	],
	"esModuleInterop": true
}
